# Cấu hình Nginx cho Next.js static site
# Copy file này vào: /etc/nginx/conf.d/tcomie.conf
# Sau đó chạy: sudo nginx -t && sudo systemctl reload nginx

server {
    listen 80;
    server_name yourdomain.com www.yourdomain.com;  # Thay đổi domain của bạn

    root /var/www/html/tcomie;  # Thư mục chứa build files
    index index.html;

    # Gzip compression để tăng tốc độ
    gzip on;
    gzip_vary on;
    gzip_min_length 1024;
    gzip_types text/plain text/css text/xml text/javascript 
               application/x-javascript application/xml+rss 
               application/javascript application/json;

    # Security headers
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;

    # Redirect root to Vietnamese homepage
    location = / {
        return 301 /vi/trang-chu/;
    }

    # Serve static files - Next.js routing
    location / {
        try_files $uri $uri/ $uri.html /index.html;
    }

    # Cache static assets (images, fonts, etc.)
    location ~* \.(jpg|jpeg|png|gif|ico|css|js|svg|woff|woff2|ttf|eot|webp|avif)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
    }

    # Cache Next.js _next folder
    location /_next/ {
        expires 1y;
        add_header Cache-Control "public, immutable";
    }

    # Error pages
    error_page 404 /404.html;
    error_page 500 502 503 504 /50x.html;
    
    location = /50x.html {
        root /usr/share/nginx/html;
    }

    # Logging
    access_log /var/log/nginx/tcomie_access.log;
    error_log /var/log/nginx/tcomie_error.log;
}

